{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "nodenext",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "nodenext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@saasfy/api": ["packages/api/src/index.ts"],
      "@saasfy/api/server": ["packages/api/src/server.ts"],
      "@saasfy/components": ["packages/components/src/index.ts"],
      "@saasfy/components/server": ["packages/components/src/server.ts"],
      "@saasfy/crud/tokens": ["packages/crud/tokens/src/index.ts"],
      "@saasfy/crud/tokens/server": ["packages/crud/tokens/src/server.ts"],
      "@saasfy/crud/workspace-users": ["packages/crud/workspace-users/src/index.ts"],
      "@saasfy/crud/workspace-users/server": ["packages/crud/workspace-users/src/server.ts"],
      "@saasfy/crud/workspaces": ["packages/crud/workspaces/src/index.ts"],
      "@saasfy/crud/workspaces/server": ["packages/crud/workspaces/src/server.ts"],
      "@saasfy/emails": ["packages/emails/src/index.ts"],
      "@saasfy/emails/server": ["packages/emails/src/server.ts"],
      "@saasfy/invites": ["packages/crud/invites/src/index.ts"],
      "@saasfy/invites/server": ["packages/crud/invites/src/server.ts"],
      "@saasfy/resend": ["packages/resend/src/index.ts"],
      "@saasfy/resend/server": ["packages/resend/src/server.ts"],
      "@saasfy/stripe": ["packages/stripe/src/index.ts"],
      "@saasfy/stripe/server": ["packages/stripe/src/server.ts"],
      "@saasfy/supabase": ["packages/supabase/src/index.ts"],
      "@saasfy/supabase/server": ["packages/supabase/src/server.ts"],
      "@saasfy/ui/*": ["packages/ui/*"],
      "@saasfy/ui/server": ["packages/ui/src/server.ts"],
      "@saasfy/utils": ["packages/utils/src/index.ts"],
      "@saasfy/utils/server": ["packages/utils/src/server.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
